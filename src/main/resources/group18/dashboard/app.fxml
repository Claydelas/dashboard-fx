<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXSlider?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="appView" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group18.dashboard.controllers.AppController">
   <top>
      <MenuBar prefHeight="25.0" prefWidth="914.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="importCampaignButton" mnemonicParsing="false" onAction="#importCampaignButtonAction" text="Import Campaign" />
                  <MenuItem fx:id="exportPNGButton" mnemonicParsing="false" text="Save as PNG" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Accessibility">
            <items>
              <MenuItem fx:id="uiScalingButton" mnemonicParsing="false" text="UI Scaling" />
                  <MenuItem fx:id="themeButton" mnemonicParsing="false" onAction="#themeButtonAction" text="Colour Palette" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <BorderPane BorderPane.alignment="CENTER">
         <center>
            <LineChart fx:id="mainChart" prefHeight="507.0" prefWidth="685.0">
              <xAxis>
                <CategoryAxis side="BOTTOM" fx:id="xAxis" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="yAxis" side="LEFT" />
              </yAxis>
            </LineChart>
         </center>
         <bottom>
            <JFXSlider fx:id="granularitySlider" showTickLabels="true" showTickMarks="true" BorderPane.alignment="CENTER">
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </JFXSlider>
         </bottom>
      </BorderPane>
   </center>
   <left>
      <VBox prefHeight="507.0" prefWidth="193.0" BorderPane.alignment="CENTER" />
   </left>
</BorderPane>
